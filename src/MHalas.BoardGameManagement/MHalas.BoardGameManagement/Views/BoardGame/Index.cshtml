@model IEnumerable<MHalas.BoardGameManagement.Models.BoardGameViewModel>

@{
    ViewBag.Title = @MHalas.BGM.l10n.Resource.BoardGameList;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@MHalas.BGM.l10n.Resource.BoardGameList</h2>

<p>
    @Html.ActionLink(@MHalas.BGM.l10n.Resource.CreateNew, "Create")
</p>

@if (Model != null && Model.Any())
{
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Author)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PlayerMinimalAge)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlayerMinimalAge)
            </td>
            <td>
                @Html.ActionLink(@MHalas.BGM.l10n.Resource.Edit, "Edit", new { id = item.Id }) |
                @Html.ActionLink(@MHalas.BGM.l10n.Resource.Details, "Details", new { id = item.Id }) |
                @Html.ActionLink(@MHalas.BGM.l10n.Resource.Delete, "Delete", new { id = item.Id })
            </td>
        </tr>
    }
</table>
}
else
{
    <p> @MHalas.BGM.l10n.Resource.InfoNoDataToDisplay </p>
}

